generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  scores    Score[]
  session   Session[]
}

model Score {
  id        Int      @id @default(autoincrement())
  points    Int
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Session {
  id              Int      @id @default(autoincrement())
  token           String
  sessionEvents   String[]
  expirationTime  DateTime
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
}